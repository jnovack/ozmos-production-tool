doctype html
html
  head
    title= title
    style(type='text/css').
      html {
        height: 100%;
      }
      body {
        margin: 0px;
        width: 100%;
        height: 100%;
      }
      h1 {
        font-size: 12em;
        margin: 0px auto;
      }
      .offair {
        color: #cccccc;
        background-color: #333333;
      }
      .onair {
        color: white;
        background-color: #993333;
      }
      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        width:100%;
        height:100%;
      }
      .element {
        width: 100%;
        height: 100%;
      }

  body(id='body').onair
    div.container
      h1(id='message').onair ON AIR

    script.
      function onClick() {
        var message = document.getElementById('message');
        var body = document.getElementById('body');
        if (message.innerHTML == "ON AIR") {
          message.innerHTML = "OFF AIR";
          message.className = "offair";
          body.className = "offair";
        } else {
          message.innerHTML = "ON AIR";
          message.className = "onair";
          body.className = "onair";
        }
      }
      document.addEventListener("click", onClick);