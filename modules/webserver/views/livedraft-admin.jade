extends layout

block head
  link(href='/stylesheets/base.css', rel='stylesheet')
  link(href='/stylesheets/divimage.css', rel='stylesheet')
  script(src='/javascripts/functions.js')
  style.
    .nav-tabs>li { background-color: #ECF0F1 }

block footer
  script.
    var livedraft_url = '#{wsurl}';
  script(src='/javascripts/livedraft.js')
  script(src='/javascripts/livedraft-admin.js')

block content
  div.container
    style.
      .row { margin-top: 24px;}

    div.row
      div.col-lg-12
        div(name='url').control-group
          label(for='url',class='control-label') Draft URL
          div.controls
            input(data-group='text',type='text',id='url',placeholder='http://www.somedrafttool.com/en/drafttool/12345',class='form-control')

    div.row
      div.col-sm-3
        div.control-group
          label(for='team1-name',class='control-label') Team 1 Name
          div.controls
            input(data-group='text',type='text',id='team1-name',name='team1-name',placeholder='Rancho Carne Toros',class='form-control')
      div.col-sm-2
        div.control-group
          label(for='team1-timer',class='control-label') Team 1 Pool
          div.controls
            span(data-group='value',type='text',id='blue-pool',placeholder='0',class='form-control',disabled,value=0)
      div.col-sm-2
        div.control-group
          label(for='timer',class='control-label') Timer
          div.controls
            span(data-group='value',type='text',id='time-pool',placeholder='0',class='form-control',disabled,value=0)
      div.col-sm-2
        div.control-group
          label(for='team2-timer',class='control-label') Team 2 Pool
          div.controls
            span(data-group='value',type='text',id='red-pool',placeholder='0',class='form-control',disabled,value=0)
      div.col-sm-3
        div.control-group
          label(for='team2-name',class='control-label') Team 2 Name
          div.controls
            input(data-group='text',type='text',id='team2-name',name='team2-name',placeholder='East Compton Clovers',class='form-control')

    div.row
      div.col-lg-12
        div.row
          div.col-sm-3.text-center
            div.btn-toolbar
              a(data-group='draft-control-pills',id='btnDisconnect',data-action='disconnect',data-class='danger',style='display: none;').btn.btn-lg.btn-danger Disconnect
              a(data-group='draft-control-pills',id='btnConnect',data-action='connect',data-class='success').btn.btn-lg.btn-success Connect
          div.col-sm-3.text-center
            div.btn-toolbar
              a(data-group='draft-command-pills',id='btnPause',data-action='pause').btn.btn-lg.btn-warning Stop Video
              a(data-group='draft-command-pills',id='btnPlay',data-action='play',style='display: none;').btn.btn-lg.btn-success Loop Video
          div.col-sm-3.text-center
            div.btn-toolbar
              a(data-group='draft-reset-pills',id='btnReload',data-action='reset').btn.btn-lg.btn-warning Reload
        div.row
          div.col-sm-2
              div(data-group='pictures',id='blue-b1-icon').center.divimage.divimagelg
          div.col-sm-2
              div(data-group='pictures',id='blue-b2-icon').center.divimage.divimagelg
          div.col-sm-4
            div(data-group='pictures',id='map-icon').center.divimage.map-small
          div.col-sm-2
              div(data-group='pictures',id='red-b2-icon').center.divimage.divimagelg
          div.col-sm-2
              div(data-group='pictures',id='red-b1-icon').center.divimage.divimagelg

        - for (var x = 1; x < 6; ++x) {
          div.row
            div.col-sm-2
              div(data-group='pictures',id='blue-p'+x+'-icon').center.divimage.divimagelg
            div.col-sm-4
              label(for='blue-p'+x,class='control-label') blue-p#{x}
              div.controls
                span(data-group='selects',role='trigger',data-trigger='picture',id='blue-p'+x+'-hero',class='form-control',disabled)
            div.col-sm-4
              label(for='red-p'+x,class='control-label') red-p#{x}
              div.controls
                span(data-group='selects',role='trigger',data-trigger='picture',id='red-p'+x+'-hero',class='form-control',disabled)
            div.col-sm-2
              div(data-group='pictures',id='red-p'+x+'-icon').center.divimage.divimagelg
        - }


    div.row
      div.col-lg-12
        div.control-group
          label(for='announcement',class='control-label') Announcement
          div.controls
            input(data-group='text',type='text',id='announcement',name='announcement',placeholder='Coming Up: The finals!',class='form-control')

